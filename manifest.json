{
  "manifest_version": 3,
  "name": "Full Page Screen Recorder",
  "version": "1.0",
  "description": "Full-page screen recorder with auto resolution detect and high quality",
  "permissions": [
    "tabs",
    "desktopCapture",
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "dashboard.css", "dashboard.js", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
